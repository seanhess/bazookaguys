


#board
  background url(/images/bg.jpg) repeat
  width 800px
  height 600px
  position relative

  .player
    background url(/images/player1.png) no-repeat left bottom
    position absolute
    width 40px
    height 40px

#identify

  .avatar
    float left
    width 40px
    height 40px
    margin 5px
    border solid 3px #EEE

  .avatar.player1
    background url(/images/player1.png) no-repeat center bottom

  .avatars
    .avatar
      &:hover, &.selected
        border solid 3px #FAA

  .name
    clear both

  .players
    .player
      clear both

